<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context=".Cafeteria.CateferiaFragment">
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:visibility="visible"
            android:id="@+id/cafeterla_firstlayout">
        <TextView
                android:text="가천대학교 학식정보"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/textView2"
                android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                android:gravity="center" android:textStyle="bold" android:layout_marginTop="30dp"/>
        <Button
                android:text="비전타워"
                android:layout_width="250dp"
                android:layout_height="100dp" android:id="@+id/cafeteria_vision_btn"
                android:background="@color/GLC"
                android:textColor="@color/common_google_signin_btn_text_dark_default"
                android:textSize="24sp" android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="0.496"
                app:layout_constraintTop_toBottomOf="@+id/cafeteria_edu_btn"
                app:layout_constraintVertical_bias="1.0"
                android:layout_marginTop="50dp" android:layout_gravity="center" android:layout_marginBottom="5dp"/>
        <Button
                android:text="예술대학교"
                android:layout_width="250dp"
                android:layout_height="100dp" android:id="@+id/cafeteria_art_btn"
                app:layout_constraintTop_toBottomOf="@+id/cafeteria_vision_btn"
                android:background="@color/GLC"
                android:textColor="@color/common_google_signin_btn_text_dark_default"
                android:textSize="24sp" android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.496"
                android:layout_gravity="center" android:layout_margin="4dp"/>
        <Button
                android:text="교육대학원"
                android:layout_width="250dp"
                android:layout_height="100dp" android:id="@+id/cafeteria_edu_btn"
                android:background="@color/GLC"
                android:textColor="@color/common_google_signin_btn_text_dark_default"
                android:textSize="24sp" android:textStyle="bold"
                tools:layout_editor_absoluteY="107dp" tools:layout_editor_absoluteX="80dp"
                android:layout_gravity="center" android:layout_margin="4dp"/>
    </LinearLayout>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:layout_weight="1" android:id="@+id/cafeteria_secondlayout"
            android:visibility="gone">
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <Button
                    android:text="뒤로가기"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/cafeteria_back_btn"
                    android:layout_weight="1" android:background="@drawable/bg_mybutton2"
                    android:textColor="@color/common_google_signin_btn_text_dark_default" android:layout_margin="3dp"/>
            <Button
                    android:text="월"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/cafeteria_monday" android:layout_weight="1"
                    android:background="@drawable/bg_mybutton2"
                    android:textColor="@color/common_google_signin_btn_text_dark_default" android:layout_margin="3dp"/>
            <Button
                    android:text="화"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/cafeteria_tuesday" android:layout_weight="1"
                    android:background="@drawable/bg_mybutton2"
                    android:textColor="@color/common_google_signin_btn_text_dark_default" android:layout_margin="3dp"/>
            <Button
                    android:text="수"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/cafeteria_Wednesday"
                    android:layout_weight="1" android:background="@drawable/bg_mybutton2"
                    android:textColor="@color/common_google_signin_btn_text_dark_default" android:layout_margin="3dp"/>
            <Button
                    android:text="목"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/cafeteria_thursday"
                    android:layout_weight="1" android:background="@drawable/bg_mybutton2"
                    android:textColor="@color/common_google_signin_btn_text_dark_default" android:layout_margin="3dp"/>
            <Button
                    android:text="금"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/cafeteria_friday" android:layout_weight="1"
                    android:background="@drawable/bg_mybutton2"
                    android:textColor="@color/common_google_signin_btn_text_dark_default" android:layout_margin="3dp"/>
        </LinearLayout>
        <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:layout_weight="1">
            <LinearLayout android:layout_width="match_parent" android:layout_height="match_parent"
                          android:orientation="horizontal">
                <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content" android:id="@+id/cafeteria_text1"
                        android:layout_weight="1" android:layout_margin="5dp"/>
                <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content" android:id="@+id/cafeteria_text2"
                        android:layout_weight="1" android:layout_margin="5dp"/>
                <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content" android:id="@+id/cafeteria_text3"
                        android:layout_weight="1" android:layout_margin="5dp"/>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</FrameLayout>